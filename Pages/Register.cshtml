
@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registreren</h1>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div style="padding:10px;border:1px solid #c00;margin-bottom:10px;">
        <b>@Model.ErrorMessage</b>
    </div>
}

<form method="post">
    <div>
        <label asp-for="Input.Email"></label><br />
        <input asp-for="Input.Email" />
        <div><small><span asp-validation-for="Input.Email"></span></small></div>
    </div>

    <div style="margin-top:10px;">
        <label asp-for="Input.Password"></label><br />
        <input asp-for="Input.Password" type="password" />
        <div><small><span asp-validation-for="Input.Password"></span></small></div>
    </div>

    <div style="margin-top:10px;">
        <label asp-for="Input.ConfirmPassword"></label><br />
        <input asp-for="Input.ConfirmPassword" type="password" />
        <div><small><span asp-validation-for="Input.ConfirmPassword"></span></small></div>
    </div>

    <div style="margin-top:15px;">
        <button type="submit">Account aanmaken</button>
        <a asp-page="/Login" style="margin-left:10px;">Ik heb al een account</a>
    </div>
</form>
